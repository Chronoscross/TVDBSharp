<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <VersionPrefix>3.0.0</VersionPrefix>
    <FileVersion>3.0.0</FileVersion>
    <!-- The AssemblyVersion should only be updated on a Major version bump -->
    <AssemblyVersion>3.0.0.0</AssemblyVersion>

    <DebugType>full</DebugType>
    <AssemblyName>TVDBSharp</AssemblyName>
    <PackageId>TVDBSharp</PackageId>
    <TargetFramework>netstandard1.6</TargetFramework>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>TVDBSharp</PackageId>
    <Authors>Jeroen Vannevel</Authors>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A C# wrapper for the TVDB API. For more information, go to https://github.com/Vannevelj/TVDBSharp/blob/master/README.md</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/Vannevelj/TVDBSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Vannevelj/TVDBSharp</RepositoryUrl>
    <PackageTags>tvdb, tv, show, series</PackageTags>
    <PackageReleaseNotes>* Updated to use V3 of the API
* Package is now released in .netstandard1.6
* API is async
* Certain types have had slight adjustments to naming
* Certain endpoints have been adapted, removed or added</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Net.Http" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>